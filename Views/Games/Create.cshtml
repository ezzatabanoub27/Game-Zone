@model CreateGameFormViewModel
@{

    ViewData["Title"] = "Add Game";

}
<h5> 

    <i class="bi bi-patch-plus"></i>

    Add a New Game 
</h5>
<form   asp-controller="Games" enctype="multipart/form-data" >
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <div>
                    <label asp-for="Name" class="form-label mt-4"></label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                    <span
                        asp-validation-for="Name" class ="text-danger">
                    </span>
                </div>
            </div>

            <div class="form-group">
                    <label asp-for= "cateogryId" class="form-label  mt-2"></label>
                    <select class="form-select" asp-for="cateogryId" asp-items="Model.Cateogries">
                       <option></option>
                    </select>
                    <span asp-validation-for="cateogryId" class="text-danger">
                    </span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedDevices" class="form-label  mt-2"></label>
                <select class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices">
                    <option></option>
                </select>
                <span asp-validation-for="SelectedDevices" class="text-danger">
                </span>

                <div class="form-group">
                    <div>
                        <label asp-for="Description" class="form-label mt-2"></label>
                        <textarea class="form-control" asp-for="Description" placeholder="Descrption"></textarea>
                        <span asp-validation-for="Description" class="text-danger">
                        </span>

                        <div class="form-group">
                            <div>
                                <label asp-for="Cover" class="form-label mt-2"></label>
                                <input type="file" class="form-control" asp-for="Cover" 
                                data-rule-extension="@FileSettings.imageextention.Replace(".",string.Empty)
                                 data-msg-extension="Not Allowed Extension">
                                <small class="form-text text-muted">only jpg, jpeg, png files are allowd with max size 1MB.</small>

                                <span asp-validation-for="Cover" class="text-danger  d-nlock" >
                                </span>
                            </div>
                            <button type="submit" class="btn btn-primary  mt-2 ">Save</button>


                        </div>
                        

                   
                    </div>
               </div>        
                     
            </div>
        </div>  
        <div class="col-md-6  d-flex justify-content-center  overflow-hidden">
            <img class="cover-preview d-none" alt="Cover" />
        </div>
     </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#Cover').on('change', function () {
                $('.cover-preview').attr('src', window.URL.createObjectURL(this.files[0])).removeClass('d-none')
            });
        });
</script>

}

